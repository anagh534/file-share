<body>
    <div class="container">
        <div class="row">
            <h2 class="text-center text-info mt-1">Share Files</h2>
            <p class="text-center mt-1 text-danger">Deleting Files Automatically after 30 Minutes</p>
            <div class="text-center">
                <% if (locals.fileLink !=null) { %>
                <p class="text-success">Your file is upload</p>
                <a href="<%=locals.fileLink%>" target="_blank"><%=locals.fileLink%></a>
                <button onclick="navigator.clipboard.writeText('<%=locals.fileLink%>')" class="btn"><i class="fa-regular fa-copy"></i></button>
                <%}%>
            </div>
            <div class="col-lg-7">
                <img src="/share.svg" alt="" class="img-fluid">
            </div>
            <div class="col-lg-5 d-flex justify-content-center align-items-center">
                
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <label for="file" class="label-form mt-5">File</label>
                    <input type="file" name="file" id="file" class="form-control" required>
                    <label for="passwd" class="label-form">Password</label>
                    <input type="password" name="password" id="passwd" class="form-control">
                    <input type="submit" value="Share" class="btn btn-success mt-1">
                </form>
            </div> 
        </div>
    </div>
